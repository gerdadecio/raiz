<% content_for(:title) { 'Dashboard' } %>

<h3>Users | <%= link_to "add new user", new_user_path %></h3>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Wallet ID</th>
      <th>Balance</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.map do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.full_name %></td>
        <td><%= user.wallet_account.id %></td>
        <td><%= user.wallet_account.balance.format %></td>
        <td>
          <%= link_to "view", user_path(user.id) %> |
          <%= link_to "edit user", edit_user_path(user.id) %> |
          <%= link_to "add fund", new_fund_wallet_path(user.wallet_account.id) %> |
          <%= link_to "transfer fund", new_transfer_wallet_path(user.wallet_account.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

