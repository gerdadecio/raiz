<p>
  Wallet ID: <strong><%= @wallet.id %></strong>
</p>
<p>
  Wallet Balance: <strong><%= @wallet.currency %> <%= @wallet.balance.format %></strong>
</p>
<hr/>
<h3>Add funds</h3>
<small>Note: Funds will be coming from our vault or App Wallet</small>
<p>
  <%= form_with model: @wallet, url: wallets_add_balance_path(id: @wallet.id), method: :post do |form| %>
    <%= form.label "Amount:" %>
    <%= form.text_field "amount", value: 0 %>
    <%= form.submit "Add" %>
  <% end %>
</p>
<hr/>
<h3>Transfer funds</h3>
<p>
  <%= form_with model: @wallet, url: wallets_transfer_path(id: @wallet.id), method: :post do |form| %>
    <%= form.label "To Account ID:" %>
    <%= form.number_field "to" %>
    <%= form.label "Amount:" %>
    <%= form.text_field "amount", value: 0 %>
    <%= form.submit "Send" %>
  <% end %>
</p>
<hr/>
<h3>Transactions</h3>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Type</th>
      <th>From</th>
      <th>To</th>
      <th>Amount</th>
      <th>Balance</th>
    </tr>
  </thead>
  <tbody>
    <% @wallet.transaction_history.each do |transaction_history| %>
      <tr>
        <td><%= transaction_history.id %></td>
        <td><%= transaction_history.code %></td>
        <td><%= transaction_history.code == :deposit ? transaction_history.partner_account.account.identifier.to_s : transaction_history.account.account.identifier.to_s %></td>
        <td><%= transaction_history.code == :deposit ? transaction_history.account.account.identifier.to_s : transaction_history.partner_account.account.identifier.to_s %></td>
        <td><%= transaction_history.amount.format %></td>
        <td><%= transaction_history.balance.format %></td>
      </tr>
    <% end %>
  </tbody>
</table>
